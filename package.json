{
  "name": "react-busser",
  "description": "An evented object for scalable and precise communication across ReactJS Components",
  "version": "0.0.1",
  "main": "dist/react-busser.js",
  "module": "dist/react-busser.es.js",
  "umd": "dist/react-busser.umd.js",
  "keywords": [
    "eventbus",
    "mediator",
    "react",
    "atom",
    "state-container",
    "reducer",
    "state-management"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint src/*",
    "coverage": "jest --coverage",
    "prepublish": "npm run build",
    "build:rollup": "rollup -c rollup.config.js",
    "semantic-release": "semantic-release",
    "cleanup": "rimraf dist",
    "build": "npm run cleanup && npm-run-all build:*",
    "prettier": "prettier --write '{src,test}/*.jsx?'",
    "print-file-size": "cat dist/react-click-away-listener.js | gzip | wc -c",
    "validate-commit-msg": "echo \"validate-commit-msg\"",
  },
  "jest": {
    "automock": false,
    "bail": 1,
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      },
      "./src/common/": {
        "branches": 80,
        "statements": 80
      },
      "./src/evenbus/core.js": {
        "statements": 70
      },
      "./src/fetcher/core.js": {
        "statements": 70
      },
      "./src/utils/core.js": {
        "statements": 70
      },
      "./src/helpers.js": {
        "branches": 30,
        "statements": 30
      }
    },
    "coverageDirectory": "coverage",
    "moduleDirectories": [
      "node_modules"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@semantic-release/npm": "^7.1.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^12.1.10",
    "@testing-library/react-hooks": "^5.1.2",
    "coveralls": "^3.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "ghooks": "^2.0.4",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "react": "~16.8.0",
    "react-dom": "~16.8.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.47.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "peerDependencies": {
    "react": "16.x || 17.x || 18.x",
    "react-dom": "16.x || 17.x || 18.x",
    "react-router": "5.2.x || 6.x",
    "react-router-dom": "5.3.x || 6.x",
    "@preact/signals-react": "^1.2.2"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "lodash.isempty": "^4.4.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "npm run validate-commit-msg",
      "pre-push": "npm run test",
      "post-merge": "npm install",
      "post-rewrite": "npm install"
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/codesplinta/busser.git"
  },
  "author": "Ifeora Okechukwu <isocroft@gmail.com> (https://isocroft.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codesplinta/busser/issues"
  },
  "homepage": "https://github.com/codesplinta/busser"
}
